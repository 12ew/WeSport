<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :age %>
  <%= f.number_field :age %><br><br>

  <%= f.label :gender %>
  <%= f.text_field :gender %><br><br>

  <%= f.label :fav_sport %>
  <%= f.text_field :fav_sport %><br><br>

  <%= f.label :bio %>
  <%= f.text_field :bio %><br><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password_digest, "Password" %>
  <%= f.text_field :password_digest %><br><br>

  <%= f.submit %>

<% end %>
