<h3> <%= @meetup.name %> Meetup </h3>

<%= button_to "Edit Meetup", edit_meetup_path, method: 'get' %><br>


  <% if current_user.joined?(@meetup) %>
    <%= button_to "Leave", controller: "user_meetups", action: "destroy", meetup_id: @meetup.id, method: 'post' %>
  <% else %>
    <%= button_to "Join", controller: "user_meetups", action: "create", meetup_id: @meetup.id, method: 'post' %>
  <% end %><br>
<h6>Meetup Info: </h6>
<h4> <%= @meetup.category %> </h4>
<h4> <%= @meetup.location %> </h4>
<h4> <%= @meetup.time.strftime("%As - %H:%M %P") %> </h4><br>
<h6>About:</h6>
<h5> <%= @meetup.description %> </h5>

<%= form_for [@meetup, @comment] do |f| %>
  <small><%= f.label :content, "Add comment" %><br>
    <%= f.text_area :content %>
    <%= f.submit %>
<% end %>




<h5>Comments</h5>

  <% @meetup.comments.each do |comment| %>
    <p> <h6><%= link_to comment.user.username, user_path(comment.user) %> <small>said:  </small></h6></p>


  <div class="row">
   <div class="col s12 m12">
     <div class="card-panel blue">
       <span class="white-text"> <%= comment.content %>
       </span>
     </div>
   </div>
 </div>



  <% end %>
